{
	"name": "bdfd-bds",
	"author": "NightNutSky",
	"publisher": "NightNutSky",
	"icon": "assets/icons/ext-logo.png",
	"displayName": "Bot Designer For Discord",
	"description": "Enjoyed BDFD but want to code your bot comfortable using VS Code? The extension will solve your needs!",
	"version": "2.0.1",
	"l10n": "./l10n",
	"contributors": [
		{
			"name": "Musical",
			"url": "https://github.com/MusicalxD"
		},
		{
			"name": "MineBartekSA",
			"url": "https://github.com/MineBartekSA"
		},
		{
			"name": "NightNutSky",
			"url": "https://github.com/NightNutSky"
		},
		{
			"name": "Laza",
			"url": "https://github.com/LazaDev"
		},
		{
			"name": "worte",
			"url": "https://github.com/wuaht"
		},
		{
			"name": "Rajat",
			"url": "https://github.com/rajatcj"
		},
		{
			"name": "RainbowKey",
			"url": "https://github.com/Rainb0wKey"
		},
		{
			"name": "Muhammad8999",
			"url": "https://github.com/Muhammad8999"
		}
	],
	"bugs": {
		"url": "https://discord.gg/wKADUUfcpj"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/NightNutSky/bdfd-bds"
	},
	"sponsor": {
		"url": "https://www.donationalerts.com/r/nightnutsky"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"pack": "tsc -p . && vsce package"
	},
	"extensionKind": [
		"ui"
	],
	"contributes": {
		"configuration": [
			{
				"title": "Bot Designer For Discord",
				"properties": {
					"BDFD.experiments.autoCompletions": {
						"type": "boolean",
						"default": false,
						"description": "Configures the Auto Completions feature. If enabled, the new experimental Auto Completions feature will be enabled, but they're still unstable. Reload is required."
					},
					"BDFD.experiments.sync": {
						"type": "boolean",
						"default": false,
						"description": "Configures the BDFD Sync feature. If enabled, the new experimental BDFD Sync feature will be loaded. Reload is required."
					}
				}
			}
		],
		"languages": [
			{
				"id": "bds",
				"aliases": [
					"BDScript",
					"bds"
				],
				"extensions": [
					".bds",
					".bdscript"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./assets/icons/icon-l.png",
					"dark": "./assets/icons/icon-d.png"
				}
			}
		],
		"grammars": [
			{
				"language": "bds",
				"scopeName": "source.bdscript",
				"path": "./syntaxes/bds.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "bdfd.functionList",
				"category": "BDFD Helpers",
				"title": "Function List",
				"icon": "$(list-flat)"
			},
			{
				"command": "bdfd.tokenCustomization",
				"category": "BDFD",
				"title": "Customize Functions' Foreground Colors and Font Styles",
				"icon": "$(edit)"
			},
			{
				"command": "bdfd.resetTokenCustomization",
				"category": "BDFD",
				"title": "Reset Functions' Foreground Colors and Font Styles to default",
				"icon": "$(gear)"
			},
			{
				"command": "bdfd.sync.configure",
				"category": "BDFD Sync Experiment",
				"title": "Configure BDFD Sync feature.",
				"icon": "$(gear)"
			},
			{
				"command": "bdfd.sync.openCommandList",
				"category": "BDFD Sync Experiment",
				"title": "Open command list for syncing.",
				"icon": "$(list-flat)"
			},
			{
				"command": "bdfd.sync.modifyCommandData",
				"category": "BDFD Sync Experiment",
				"title": "Modify command data in the current session.",
				"icon": "$(edit)"
			},
			{
				"command": "bdfd.sync.pushCommand",
				"category": "BDFD Sync Experiment",
				"title": "Push command to BDFD",
				"icon": "$(check)"
			},
			{
				"command": "bdfd.sync.openBotList",
				"category": "BDFD Sync Experiment",
				"title": "Open bot list for syncing",
				"icon": "$(list-flat)"
			},
			{
				"command": "bdfd.sync.openVariableList",
				"category": "BDFD Sync Experiment",
				"title": "Open variable list for modifying",
				"icon": "$(edit)"
			},
			{
				"command": "bdfd.sync.createVariable",
				"category": "BDFD Sync Experiment",
				"title": "Create variable",
				"icon": "$(add)"
			},
			{
				"command": "bdfd.sync.createCommand",
				"category": "BDFD Sync Experiment",
				"title": "Create command",
				"icon": "$(add)"
			},
			{
				"command": "bdfd.utils.escape",
				"category": "BDFD Utils",
				"title": "Escape Special Characters"
			},
			{
				"command": "bdfd.sync.deleteCommand",
				"category": "BDFD Sync Experiment",
				"title": "Delete command"
			},
			{
				"command": "bdfd.sync.deleteVariable",
				"category": "BDFD Sync Experiment",
				"title": "Delete variable"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "bdfd.sync.pushCommand",
					"group": "BDFD Sync Experiment",
					"when": "editorLangId == bds"
				},
				{
					"command": "bdfd.utils.escape",
					"group": "BDFD Utils",
					"when": "editorHasSelection == true"
				}
			],
			"editor/title/run": [
				{
					"command": "bdfd.sync.pushCommand",
					"group": "BDFD Sync Experiment",
					"when": "editorLangId == bds"
				},
				{
					"command": "bdfd.functionList",
					"group": "BDFD Helpers",
					"when": "editorLangId == bds"
				}
			],
			"commandPalette": [
				{
					"command": "bdfd.sync.pushCommand",
					"group": "BDFD Sync Experiment",
					"when": "editorLangId == bds"
				},
				{
					"command": "bdfd.utils.escape",
					"group": "BDFD Utils",
					"when": "editorHasSelection == true"
				}
			]
		},
		"keybindings": [
			{
				"command": "bdfd.functionList",
				"key": "ctrl+d",
				"when": "editorLangId == bds"
			}
		],
		"configurationDefaults": {
			"[bds]": {
				"editor.semanticHighlighting.enabled": "configuredByTheme",
				"editor.bracketPairColorization.enabled": false,
				"editor.tabCompletion": "on",
				"editor.suggest.preview": true,
				"editor.acceptSuggestionOnEnter": "off",
				"workbench.editor.languageDetection": false
			},
			"editor.tokenColorCustomizations": {
				"textMateRules": [
					{
						"name": "[Interactions] Functions",
						"scope": "f.interactions.bds",
						"settings": {
							"foreground": "#D6FFB4"
						}
					},
					{
						"name": "[Discord - General] Functions",
						"scope": "f.discord.general.bds",
						"settings": {
							"foreground": "#ABAEFF"
						}
					},
					{
						"name": "[Discord - User] Functions",
						"scope": "f.discord.user.bds",
						"settings": {
							"foreground": "#FF7E9B"
						}
					},
					{
						"name": "[Discord - Guild] Functions",
						"scope": "f.discord.guild.bds",
						"settings": {
							"foreground": "#B81560"
						}
					},
					{
						"name": "[Discord - Roles] Functions",
						"scope": "f.discord.roles.bds",
						"settings": {
							"foreground": "#3388FF"
						}
					},
					{
						"name": "[Discord - Channels] Functions",
						"scope": "f.discord.channels.bds",
						"settings": {
							"foreground": "#063BE1"
						}
					},
					{
						"name": "[Limiters - General] Functions",
						"scope": "f.limiters.general.bds",
						"settings": {
							"foreground": "#C07300"
						}
					},
					{
						"name": "[Limiters - If] Functions",
						"scope": "f.limiters.if.bds",
						"settings": {
							"foreground": "#cf0287"
						}
					},
					{
						"name": "[Limiters - Only If] Functions",
						"scope": "f.limiters.onlyIf.bds",
						"settings": {
							"foreground": "#BA0004"
						}
					},
					{
						"name": "[Limiters - Is] Functions",
						"scope": "f.limiters.is.bds",
						"settings": {
							"foreground": "#A900B0"
						}
					},
					{
						"name": "[Limiters - Check] Functions",
						"scope": "f.limiters.check.bds",
						"settings": {
							"foreground": "#D00097"
						}
					},
					{
						"name": "[Limiters - Blacklist] Functions",
						"scope": "f.limiters.blacklist.bds",
						"settings": {
							"foreground": "#5A5A5A"
						}
					},
					{
						"name": "[Limiters - Ignore] Functions",
						"scope": "f.limiters.ignore.bds",
						"settings": {
							"foreground": "#5A5A5A"
						}
					},
					{
						"name": "[Limiters - Exists] Functions",
						"scope": "f.limiters.exists.bds",
						"settings": {
							"foreground": "#5A5A5A"
						}
					},
					{
						"name": "[Limiters - Cooldown] Functions",
						"scope": "f.limiters.cooldown.bds",
						"settings": {
							"foreground": "#FFB0DD"
						}
					},
					{
						"name": "[Embed - Messages] Functions",
						"scope": "f.messages.embed.bds",
						"settings": {
							"foreground": "#FFD244"
						}
					},
					{
						"name": "[Threads - Messages] Functions",
						"scope": "f.messages.threads.bds",
						"settings": {
							"foreground": "#72C6B5"
						}
					},
					{
						"name": "[Math - General] Functions",
						"scope": "f.math.general.bds",
						"settings": {
							"foreground": "#FFC09A"
						}
					},
					{
						"name": "[Math - Count] Functions",
						"scope": "f.math.count.bds",
						"settings": {
							"foreground": "#F1B06E"
						}
					},
					{
						"name": "Escape",
						"scope": "escape.bds",
						"settings": {
							"foreground": "#F6EFEF",
							"fontStyle": "italic underline"
						}
					},
					{
						"name": "Brackets",
						"scope": "brackets.bds",
						"settings": {
							"foreground": "#FF4C4C",
							"fontStyle": "bold"
						}
					},
					{
						"name": "Variables",
						"scope": "variables.bds",
						"settings": {
							"foreground": "#A6FF4E"
						}
					},
					{
						"name": "Parentheses",
						"scope": "parentheses.bds",
						"settings": {
							"foreground": "#FFCD4C",
							"fontStyle": "bold"
						}
					},
					{
						"name": "[General - Messages] Functions",
						"scope": "f.messages.general.bds",
						"settings": {
							"foreground": "#A3FFE2"
						}
					},
					{
						"name": "[Text Split - Messages] Functions",
						"scope": "f.messages.textSplit.bds",
						"settings": {
							"foreground": "#05AAAF"
						}
					},
					{
						"name": "[Reactions - Messages] Functions",
						"scope": "f.messages.reactions.bds",
						"settings": {
							"foreground": "#009B6C"
						}
					},
					{
						"name": "Comments - General",
						"scope": "comments",
						"settings": {
							"foreground": "#404058"
						}
					},
					{
						"name": "Comments - !",
						"scope": "comments.!",
						"settings": {
							"foreground": "#fe5e5e"
						}
					},
					{
						"name": "Comments - ?",
						"scope": "comments.?",
						"settings": {
							"foreground": "#5e5eff"
						}
					},
					{
						"name": "Comments - -",
						"scope": "comments.-",
						"settings": {
							"foreground": "#ecff5e"
						}
					},
					{
						"name": "Comments - +",
						"scope": "comments.+",
						"settings": {
							"foreground": "#66ff5e"
						}
					},
					{
						"name": "[General - Bot] Functions",
						"scope": "f.bot.general.bds",
						"settings": {
							"foreground": "#7A5FB6"
						}
					},
					{
						"name": "[General - Time] Functions",
						"scope": "f.time.general.bds",
						"settings": {
							"foreground": "#CAA995"
						}
					},
					{
						"name": "[General - Random] Functions",
						"scope": "f.random.general.bds",
						"settings": {
							"foreground": "#FFFFFF"
						}
					},
					{
						"name": "[General - Error Handling] Functions",
						"scope": "f.error.general.bds",
						"settings": {
							"foreground": "#65A0A2"
						}
					},
					{
						"name": "[General - HTTP Requests] Functions",
						"scope": "f.http.general.bds",
						"settings": {
							"foreground": "#F97A4F"
						}
					},
					{
						"name": "[General - Webhooks] Functions",
						"scope": "f.webhooks.general.bds",
						"settings": {
							"foreground": "#09B924"
						}
					},
					{
						"name": "[General - JSON] Functions",
						"scope": "f.json.general.bds",
						"settings": {
							"foreground": "#fda761"
						}
					}
				]
			}
		}
	},
	"devDependencies": {
		"@types/hidefile": "3.0.0",
		"@types/vscode": "^1.79.0"
	},
	"dependencies": {
		"@nightnutsky/bdfd-external": "^1.0.0",
		"@nightnutsky/bpapi": "^2.0.0",
		"hidefile": "3.0.0"
	}
}
